# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Admin pages
GET     /admin/login                controllers.AdminCp.login()
POST    /admin/login                controllers.AdminCp.loginSubmit()

GET     /admin/index                controllers.AdminCp.index()

GET     /admin/appList              controllers.AdminCp.appList()

GET     /admin/appPlatforms         controllers.AdminCp.appPlatformList()

GET     /admin/createAppPlatform    controllers.AdminCp.createAppPlatform()
POST    /admin/createAppPlatform    controllers.AdminCp.createAppPlatformSubmit()

GET     /admin/editAppPlatform      controllers.AdminCp.editAppPlatform(id: String)
POST    /admin/editAppPlatform      controllers.AdminCp.editAppPlatformSubmit(id: String)

GET     /admin/deleteAppPlatform    controllers.AdminCp.deleteAppPlatform(id: String)
POST    /admin/deleteAppPlatform    controllers.AdminCp.deleteAppPlatformSubmit(id: String)

GET     /admin/                     controllers.Application.appRedirect(url="/admin/index")
GET     /admin                      controllers.Application.appRedirect(url="/admin/index")

#GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
