# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Admin pages
GET     /admin/login                controllers.AdminCp.login()
POST    /admin/login                controllers.AdminCp.loginSubmit()

GET     /admin/index                controllers.AdminCp.index()

GET     /admin/appList              controllers.AdminCp.appList()

GET     /admin/appPlatforms         controllers.AdminCp_Platform.appPlatformList()
GET     /admin/createAppPlatform    controllers.AdminCp_Platform.createAppPlatform()
POST    /admin/createAppPlatform    controllers.AdminCp_Platform.createAppPlatformSubmit()
GET     /admin/editAppPlatform      controllers.AdminCp_Platform.editAppPlatform(id: String)
POST    /admin/editAppPlatform      controllers.AdminCp_Platform.editAppPlatformSubmit(id: String)
GET     /admin/deleteAppPlatform    controllers.AdminCp_Platform.deleteAppPlatform(id: String)
POST    /admin/deleteAppPlatform    controllers.AdminCp_Platform.deleteAppPlatformSubmit(id: String)

GET     /admin/appCategories        controllers.AdminCp_Category.appCategoryList()
GET     /admin/createAppCategory    controllers.AdminCp_Category.createAppCategory()
POST    /admin/createAppCategory    controllers.AdminCp_Category.createAppCategorySubmit()
#GET     /admin/editAppPlatform      controllers.AdminCp_Platform.editAppPlatform(id: String)
#POST    /admin/editAppPlatform      controllers.AdminCp_Platform.editAppPlatformSubmit(id: String)
#GET     /admin/deleteAppPlatform    controllers.AdminCp_Platform.deleteAppPlatform(id: String)
#POST    /admin/deleteAppPlatform    controllers.AdminCp_Platform.deleteAppPlatformSubmit(id: String)

GET     /admin/                     controllers.Application.appRedirect(url="/admin/index")
GET     /admin                      controllers.Application.appRedirect(url="/admin/index")

#GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
